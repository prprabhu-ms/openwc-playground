{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    // See https://github.com/microsoft/fast/issues/5198#issuecomment-964077397
    "skipLibCheck": true,
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
